.admonition > .ex-header:nth-child(2)
  margin-right 2px

.i-adm
  display inline-block
  height 20px
  width 20px
  margin-right 2px
  background var(--theme-text-light)

for name in note warning success failure detail
  if name != detail
    .i-{name}
      mask-image var(--adm-icon- + name)
      -webkit-mask-image var(--adm-icon- + name)
  .admonition.adm-{name}
    --ex-color var(--theme-adm- + name)

