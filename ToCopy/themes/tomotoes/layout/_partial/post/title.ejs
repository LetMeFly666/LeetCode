<%
  post.title = post.title || 'No title';
%>

<% if (post.title){ %>
  <% if (hasLink){ %>
    <h3 class="post-title" itemprop="name">
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h3>
  <% } else { %>
    <h3 class="post-title" itemprop="name">
      <%= post.title %>
    </h3>
  <% } %>
<% } %>

